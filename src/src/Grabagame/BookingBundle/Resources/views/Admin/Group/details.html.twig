{% extends 'GrabagameBookingBundle::layout.html.twig' %}

{% block title %}Admin - Group details{% endblock %}

{% block sidebar %}{% endblock %}

{% block body %}
    <h2 class="section-title">{{ Group.getName }}</h2>

    <p><a class="btn" href="{{ path('group_edit', { 'groupId': Group.getId }) }}">Edit this group</a></p>

    <dl class="dl-horizontal">
        <dt>Name:</dt> <dd>{{ Group.getName }}</dd>
        <dt>Roles:</dt> {% for Role in Group.getRoles %} <dd>{{ Role }}</dd> {% endfor %}
        <dt>Status:</dt> <dd>{% if Group.isActive %}Active{% else %}Deactivated{% endif %}</dd>
    </dl>

    <p><i>This group has {{ NumberOfMembers }} members.</i></p>
{% endblock %}
