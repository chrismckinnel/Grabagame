{% extends 'GrabagameBookingBundle::layout.html.twig' %}

{% block title %}Edit member{% endblock %}

{% block body %}

    {% form_theme member_form 'GrabagameBookingBundle:Form:twitter-bootstrap.html.twig' %}

    <h2 class="section-title">Member details</h2>
    
    <dl class="dl-horizontal">
        <dt>Name:</dt> <dd>{{ Member.getFirstName }} {{ Member.getLastName }}</dd>
        <dt>Username:</dt> <dd>{{ Member.getUsername }}</dd>
        <dt>Email:</dt> <dd>{{ Member.getEmail }}</dd>
    </dl>

    <form class="form-horizontal" method="post" action="{{ path('member_submit_edit') }}" name="submitEditMember">
        <fieldset>
            {{ form_widget(member_form) }}
        </fieldset>
        <div class="form-actions">
            <button class="btn btn-primary" name="submitEdit" id="submitEdit" type="submit">Save changes</button>
        </div>

        
    </form>
{% endblock %}
