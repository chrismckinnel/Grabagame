{% extends 'GrabagameBookingBundle::layout.html.twig' %}

{% block title %}View members{% endblock %}

{% block body %}
    <h2 class="section-title">Member Details</h2>

    {% block sidebar %}{% endblock %}

    <dl class="dl-horizontal">
        <dt>Member ID:</dt> <dd>{{ Member.getId }}</dd>
        <dt>Name:</dt> <dd>{{ Member.getFirstName }} {{ Member.getLastName }}</dd>
        <dt>Username:</dt> <dd>{{ Member.getUsername }}</dd>
        <dt>Email:</dt> <dd>{{ Member.getEmail }}</dd>
    </dl>

    <h3>Groups</h3>
    
    <ul class="unstyled">
        {% for Group in Member.getGroups %}
        <li>{{ Group.getName }}</li>
        {% endfor %}
    </ul>

    <div class="list-actions">
        <a class="btn btn-primary" href="{{ path('member_edit', { 'memberId': Member.getId }) }}">Edit this member</a>
    </div>
{% endblock %}

