{% extends 'GrabagameBookingBundle:Admin:dashboard.html.twig' %}

{% block title %}Admin - Club details{% endblock %}

{% block admin_content %}

    {% block sidebar %}{% endblock %}

    <h2 class="section-title">{{ Club.getName }}</h2>

    <p><a class="btn" href="{{ path('club_edit', { 'clubId': Club.getId }) }}">Edit this club</a></p>

    <dl class="dl-horizontal">
        <dt>Name:</dt> <dd>{{ Club.getName }}</dd>
        <dt>Status:</dt> <dd>{% if Club.isActive %}Active{% else %}Deactivated{% endif %}</dd>
    </dl>

    <p><i>This club has {{ Club.getNumberOfMembers }} members.</i></p>
{% endblock %}
